---
const { title, desc, tech } = Astro.props;
---

<div class="single-item">
  <h3>{title}</h3>
  <div class="project-desc project-desc-list w-richtext">
    <ul role="list">
      {desc.map((item: string[]) => <li>{item}</li>)}
    </ul>
  </div>
  <div class="mini-label-white">Technologies &amp; tools</div>
  <div class="chips-container">
    {
      tech.map((techItem: string[]) => (
        <div class="single-chip">{techItem}</div>
      ))
    }
  </div>
</div>

<style>
  .project-desc ul {
    letter-spacing: var(--letter-spacing-normal);
    line-height: var(--line-height-normal);
    font-size: var(--font-size-md);
    color: var(--color-text-light);

    li {
      padding: 4px;
    }
  }
</style>
