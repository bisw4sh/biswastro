---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
---

<!doctype html>
<html>
  <Header title="Biswash Dhungana" />
  <body>
    <div class="content">
      <Sidebar selectedItem="home" />
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <div class="fold-content">
              <h1>Hi, I'm Biswash.<br />I build things for the web.</h1>
              <p class="lead">
                Experienced fullstack developer and devops learner. A proactive
                team member dedicated to continuous learning, problem-solving,
                and aiding teammates in achieving quicker outcomes.
              </p>
            </div>
            <a href="mailto:mail@biswashdhungana.com.np" class="button w-button"
              >Contact</a
            >
          </main>
          <div class="projects-section">
            <!-- Software Development -->
            <a href="/software-development" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img
                    src="./assets/browser.svg"
                    loading="lazy"
                    alt=""
                    class="projects-category-image"
                  />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Software Development</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">
                    Technologies &amp; tools
                  </div>
                  <div class="chips-container chips-container-small-width">
                    <div class="single-chip small-chip">React</div>
                    <div class="single-chip small-chip">Next.js</div>
                    <div class="single-chip small-chip">Tanstack Start</div>
                    <div class="single-chip small-chip">Astro</div>
                    <div class="single-chip small-chip">MDX</div>
                    <div class="single-chip small-chip">TailwindCSS</div>
                    <div class="single-chip small-chip">Node.js</div>
                    <div class="single-chip small-chip">Express.js</div>
                    <div class="single-chip small-chip">Postgres</div>
                    <div class="single-chip small-chip">MySQL</div>
                    <div class="single-chip small-chip">Supabase</div>
                    <div class="single-chip small-chip">Neon</div>
                    <div class="single-chip small-chip">Firebase</div>
                    <div class="single-chip small-chip">Redis</div>
                    <div class="single-chip small-chip">MongoDB</div>
                    <div class="single-chip small-chip">TypeScript</div>
                    <div class="single-chip small-chip">Go</div>
                    <div class="single-chip small-chip">Hugo</div>
                  </div>
                </div>
              </div>
            </a>
            <!-- DevOps & Cloud -->
            <a href="/devops" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container devops-img">
                  <img
                    src="./assets/database.svg"
                    loading="lazy"
                    alt=""
                    class="projects-category-image"
                  />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>DevOps &amp;&nbsp;Cloud</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">
                    Technologies &amp; tools
                  </div>
                  <div class="chips-container chips-container-small-width">
                    <div class="single-chip small-chip">AWS</div>
                    <div class="single-chip small-chip">Docker</div>
                    <div class="single-chip small-chip">Linux</div>
                    <div class="single-chip small-chip">Bash</div>
                    <div class="single-chip small-chip">Git(Github/Gitlab)</div>
                    <div class="single-chip small-chip">
                      Github Actions/Runners
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
