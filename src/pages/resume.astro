---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
---

<html lang="en">
  <Header title="Resume | Biswash Dhungana" />
  <body>
    <div class="content">
      <Sidebar selectedItem="resume" />
      <nav class="main">
        <div class="container">
          <main class="pdf-viewer-container">
            <iframe
              src="/assets/pdfs/resume.pdf"
              class="pdf-viewer"
              title="Biswash Dhungana Resume"></iframe>
          </main>
        </div>
      </nav>
    </div>
  </body>
</html>

<style>
  .pdf-viewer-container {
    width: 100%;
    height: 90vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--color-bg-tertiary);
    border-radius: var(--border-radius-md);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
  }

  .pdf-viewer {
    width: 100%;
    height: 100%;
    border: none;
    background-color: var(--color-bg-primary);
  }
</style>
