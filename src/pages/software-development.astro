---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";

const projects = [
  {
    title: "EasyUnsub Email Client",
    desc: [
      "Built scalable backend services in Node.js (TypeScript), integrating email providers like Outlook, Imail and Gmail with Firebase for authentication and real-time functionality.",
      "Implemented Play Console payment verification, promo code management, and admin panel APIs to manage users, analytics, and configurations.",
      "Optimized system performance and scalability through efficient code design and architecture improvements.",
    ],
    tech: ["React.js", "Node.js", "Firebase", "tsoa"],
  },
  {
    title: "Mazzakotrip",
    desc: [
      "Developed booking system supporting B2C, B2B, and real-time socket-based chat and notification with Redis Adapter for scalable WebSocket communication.",
      "RBAC and ABAC for admin, agency, agents, users",
      "Designed and implemented UI, backend, and database architecture",
    ],
    tech: [
      "React.js",
      "Node.js",
      "Mongoose (MongoDB)",
      "Redis",
      "AMQPCloud",
      "AWS",
    ],
  },
  {
    title: "Uheardd",
    desc: [
      "Platform is for the historically black colleges and universities, where we curate the offers, services, and scholarships that are available for black people.",
      "Resume feedback, Company programs, and scholarships",
      "Advisors, Instructor to guide the students",
    ],
    tech: ["React", "Node.js", "Redis", "PostgreSQL (RDS)"],
  },
  {
    title: "FATC",
    desc: [
      "Users can select the events they are going to; events are streamed from Ticketmaster's discovery feed to our database",
      "Users can get recommendations of other users to talk to, where they share interests and events they are going to, so they can go together.",
    ],
    tech: ["Node.js", "Express.js", "PostgreSQL (RDS)", "Redis", "AWS"],
  },
  {
    title: "Attenzone",
    desc: [
      "Guard Management System, with admin, guardoffice and client",
      "Tracks the guards' location using the PWA and attendance with signin and out",
      "Leaflet to visualize the movements of the guard, service worker for notification",
    ],
    tech: ["Next.js", "PWA", "Prisma", "Neon"],
  },
];
---

<Layout title="Software Development | Biswash Dhungana">
  <div class="back-nav-container">
    <a href="/" class="back-nav-button w-inline-block">
      <img
        src="/assets/svgs/back.svg"
        loading="lazy"
        alt="back"
        class="back-nav-img"
      />
      <div>Back</div>
    </a>
  </div>

  <div class="content-container">
    <h1>Software Development</h1>
    <section class="items-container">
      <div class="resource-items">
        {
          projects.map((project) => (
            <Project
              title={project.title}
              desc={project.desc}
              tech={project.tech}
            />
          ))
        }
      </div>
    </section>
  </div>
</Layout>

<style>
  .back-nav-container {
    color: var(--color-text-primary);
    letter-spacing: var(--letter-spacing-very-wide);
    text-transform: uppercase;
    align-items: center;
    margin-bottom: var(--spacing-10xl);
    font-weight: 500;
    display: flex;
  }

  .back-nav-img {
    width: 18px;
    margin-right: var(--spacing-lg);
  }

  .back-nav-button {
    color: var(--color-text-primary);
    background-color: transparent;
    border-radius: var(--border-radius-sm);
    padding: var(--spacing-lg) calc(var(--spacing-lg) * 1.33);
    text-decoration: none;
    transition: var(--transition-normal);
    display: flex;
    align-items: center;
  }

  .back-nav-button:hover {
    -webkit-backdrop-filter: blur(4px);
    backdrop-filter: blur(4px);
    background-color: var(--color-overlay-subtle);
  }

  .content-container {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-7xl);
    max-width: 800px;
  }

  .items-container {
    display: flex;
    flex-direction: column;
  }

  .resource-items {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-10xl);
  }

  @media screen and (max-width: 768px) {
    .back-nav-container {
      margin-bottom: var(--spacing-6xl);
    }

    .content-container {
      gap: var(--spacing-5xl);
    }

    .resource-items {
      gap: var(--spacing-6xl);
    }
  }
</style>
